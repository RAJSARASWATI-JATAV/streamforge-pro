{
  "manifest_version": 3,
  "name": "StreamForge-Pro",
  "version": "1.0.0",
  "description": "Download videos from any website with StreamForge-Pro",
  "permissions": ["activeTab", "downloads", "storage", "nativeMessaging"],
  "host_permissions": ["<all_urls>"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [{
    "matches": ["<all_urls>"],
    "js": ["content.js"]
  }],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
